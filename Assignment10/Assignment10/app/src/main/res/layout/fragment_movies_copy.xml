<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goldframe"
    android:transitionName="@string/transition_string">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:id="@+id/imageView4"
        android:scaleType="fitXY"
        android:layout_alignStart="@+id/description"
        android:layout_above="@+id/description" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:rating="3.5"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/stars"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="40dp"
        android:text="director"
        android:textSize="15dp"
        android:layout_width="260dp"
        android:gravity="center"
        android:id="@+id/idirector"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="name1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/name1"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/description" />

    <TextView
        android:text="year2"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:id="@+id/year2"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/name1"
        android:layout_alignStart="@+id/name1" />

    <TextView
        android:layout_height="40dp"
        android:text="stars"
        android:layout_width="260dp"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"
        android:id="@+id/stars"
        android:layout_below="@+id/idirector"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="length"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:id="@+id/length2"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imageView4"
        android:layout_alignEnd="@+id/description" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:text="description"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:id="@+id/description"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
